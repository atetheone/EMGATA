{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/home/site/wwwroot/EMGATA.db"
  },
  "Jwt": {
    "Key": "#{GENERATE_A_VERY_LONG_AND_COMPLEX_SECRET_KEY_HERE_AT_LEAST_64_CHARACTERS}#",
    "Issuer": "EMGATA.ProductionAPI",
    "Audience": "EMGATA.ProductionClient",
    "ExpirationInHours": 24
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Error",
      "Microsoft.EntityFrameworkCore": "Error"
    }
  },
  "AllowedHosts": "*",
  "CorsSettings": {
    "AllowedOrigins": [
      "https://emgata.com",
      "https://www.emgata.com",
      "https://your-frontend-production-url.azurewebsites.net"
    ]
  },
  "ImageStorage": {
    "StoragePath": "/home/site/wwwroot/Images",
    "AllowedExtensions": [".jpg", ".jpeg", ".png"],
    "MaxFileSizeInBytes": 5242880
  },
  "SecuritySettings": {
    "RequireHttps": true,
    "StrictTransportSecurityMaxAge": 31536000,
    "XFrameOptions": "DENY",
    "ContentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
  },
  "DatabaseSettings": {
    "AutoMigrateDatabase": true,
    "CreateDatabaseIfNotExists": true
  },
  "PerformanceSettings": {
    "EnableResponseCompression": true,
    "CacheProfiles": {
      "Default": {
        "Duration": 3600,
        "Location": "Any"
      },
      "Long": {
        "Duration": 86400,
        "Location": "Any"
      }
    }
  }
}